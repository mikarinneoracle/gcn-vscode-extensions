{
	"name": "micronaut",
	"displayName": "GraalVM Tools for Micronaut",
	"description": "Micronaut support for VS Code",
	"version": "0.5.20",
	"preview": true,
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "oracle-labs-graalvm",
	"author": {
		"name": "Oracle Labs"
	},
	"icon": "images/GraalVM_icon_rgb.png",
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"bugs": {
		"url": "https://github.com/graalvm/vscode-extensions/issues"
	},
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"native image",
		"microservices",
		"java"
	],
	"activationEvents": [
		"workspaceContains:**/micronaut-cli.yml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Micronaut",
			"properties": {
				"micronaut.showWelcomePage": {
					"type": "boolean",
					"default": true,
					"description": "Show Micornaut Tools page on extension activation"
				},
				"micronaut.home": {
					"type": "string",
					"default": "",
					"description": "Optional path to Micronaut CLI installation",
					"scope": "machine"
				},
				"micronaut.launchUrl": {
					"type": "string",
					"default": "",
					"description": "Optional Micronaut Launch URL (e.g. 'https://launch.micronaut.io')"
				}
			}
		},
		"commands": [
			{
				"command": "extension.micronaut.showWelcomePage",
				"title": "Show Micronaut Tools Page",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.createProject",
				"title": "Create Micronaut Project",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.build",
				"title": "Build ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.deploy",
				"title": "Deploy ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.buildNativeImage",
				"title": "Build Native Image",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createDeploy",
				"title": "Create Kubernetes Deployment Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.deploy",
				"title": "Deploy to Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createService",
				"title": "Create Kubernetes Service Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.run",
				"title": "Run in Kubernetes",
				"category": "Micronaut"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.micronaut.build",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.deploy",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.buildNativeImage",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.kubernetes.createDeploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.deploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.createService",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.run",
					"when": "kubectl.available && graalVMExt.available"
				}
			]
		}
	},
	"vsce": {
	  "baseImagesUrl": "https://github.com/graalvm/vscode-extensions/raw/master/micronaut"
	},
	"config": {
		"winBuildPath": "..\\node_modules\\.bin\\vsce",
		"unixBuildPath": "../node_modules/.bin/vsce",
		"buildCmd": "package --allow-star-activation --allow-missing-repository --no-update-package-json"
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode development",
		"info": "webpack --display-modules",
		"watch": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"prebuild": "npm install",
		"build": "cross-os build",
		"lint": "eslint src --ext ts"
	},
	"cross-os": {
		"build": {
			"linux": "$npm_package_config_unixBuildPath $npm_package_config_buildCmd `[ -z ${BUILD_NUMBER} ] && echo \"${npm_package_version}\" || echo \"${npm_package_version}-${BUILD_NUMBER}\"`",
			"darwin": "$npm_package_config_unixBuildPath $npm_package_config_buildCmd `[ -z ${BUILD_NUMBER} ] && echo \"${npm_package_version}\" || echo \"${npm_package_version}-${BUILD_NUMBER}\"`",
			"win32": "%npm_package_config_winBuildPath% %npm_package_config_buildCmd%"
		}
	},
	"dependencies": {
		"decompress": "^4.2.1",
		"jdk-utils": "^0.4.4",
		"mustache": "^4.2.0",
		"vscode-kubernetes-tools-api": "^1.3.0"
	},
	"devDependencies": {
		"@types/decompress": "^4.2.4",
		"@types/glob": "^7.1.1",
		"@types/mustache": "^4.2.2",
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"ajv": "^8.12.0",
		"cross-os": "^1.5.0",
		"eslint": "^8.35.0",
		"eslint-webpack-plugin": "^4.0.0",
		"glob": "^7.1.4",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"webpack": "^5.76.0",
		"webpack-cli": "^5.0.1"
	}
}
